@{
    ViewData["Title"] = "Home Page";
    var exception = (string)TempData["Exception"];
}

@if (!string.IsNullOrEmpty(exception))
{
    <h2>Error:</h2>
    <p>@exception</p>
    <p>Please upload another CSV</p>
}

<h2>Upload CSV</h2>
<p>
    <a href="~/CorrectedAssignmentTestData.csv">Click here to download corrected assignment data</a>
</p>
<p>
    <a href="~/ValidCsvTemplate.csv">Click here to download valid CSV template</a>
</p>
<form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="UploadCsv">
    <div class="form-group">
        <div class="col-md-12">
            <input type="checkbox" value="true" name="ReplaceAll" />Delete if item does not exists in CSV (Update all Database)
        </div>
        <div class="col-md-12">
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Start" />
        </div>
    </div>
</form>
<p>&nbsp;</p>
